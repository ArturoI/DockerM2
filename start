#!/usr/bin/env bash
sudo ifconfig lo0 alias 10.254.254.254
docker-sync start && \
docker-compose up -d && \
xdg-open http://localhost/ &
echo '===================== Done ==================='
echo 'Please access these links:'
echo 'Web server: http://localhost/'
echo 'PHPMyAdmin: http://localhost:8080'
echo 'Local emails: http://localhost:8025'
echo '===================== Done ==================='
